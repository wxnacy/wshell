#!/usr/bin/env bash

OS=`curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/base/os | bash`
OSS=(${OS})
SYS=${OSS[0]}
VER=${OSS[1]}
PKG=${OSS[2]}

case $SYS in
    debian|ubuntu|devuan)
        sudo apt update -y
        sudo apt install default-jdk -y
        ;;
    centos|amzn|fedora|rhel)
        sudo yum update -y
        sudo yum install -y java-1.8.0-openjdk-devel
        ;;
    *)
        echo '暂时不支持该系统'
        ;;
esac
