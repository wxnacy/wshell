#!/usr/bin/env bash

CMD=$1

make(){
    case "$1" in
        login)
            name=mysql.login.conf
            echo 'set user user' >> ${name}
            echo 'set password password' >> ${name}
            echo '# set host localhost' >> ${name}
            echo '# set port 3306' >> ${name}
            echo '# set db db_name' >> ${name}
            echo '# set logdir /var/log/wshell' >> ${name};;
        *)  ;;
    esac
}

case "$1" in
    login)   ${0/%mysql/login} $2;;
    dump)   ${0/%mysql/dump} $2;;
    make)   make $2;;
    install)    install;;
    mysql)    mysql;;
    make)    make;;
    help)  help;;
    -h)  help;;
    *)       help;;
esac
