#!/usr/bin/env expect

spawn sh -c "sudo yum -y install wget"
spawn sh -c "wget -N --no-check-certificate https://raw.githubusercontent.com/ToyoDAdoubi/doubi/master/ssr.sh && chmod +x ssr.sh && sudo ./ssr.sh"
expect "*1-15*"
# 安装
send "1\r"
expect "(默认: 2333):"
send "\r"
expect "(默认: doub.io)"
send "\r"
expect "(默认: 5. aes-128-ctr):"
send "10\r"
expect "(默认: 2. auth_sha1_v4):"
send "\r"
expect "*Y*n"
send "y\r"
expect "(默认: 1. plain):"
send "\r"
expect "(默认: 无限):"
send "\r"
expect "(默认: 无限):"
send "\r"
expect "(默认: 无限):"
send "\r"
expect "Is this ok*y*N*"
send "y\r"
expect "Is this ok*y*N*"
send "y\r"
interact
