#!/usr/bin/env bash

VERSION=6.3.0

OS=${0/%install\/es/system\/check}
OSS=""
if [ -f $OS ];then
    TMP=`${OS}`
    OSS=($TMP)
else
    OS=`curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/system/check | bash`
    OSS=(${OS})
fi
SYS=${OSS[0]}
VER=${OSS[1]}

echo "Your system is `${OS}`"

if [ ! `command -v java` ];then
    echo 'Now install java'
    curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/java/install | bash
    # IJ=${0/%install\/es/java\/install}
    # if [ -f $IJ ];then
        # echo `${IJ}`
    # else
        # curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/java/install | bash
    # fi

fi

install(){
    echo 'Now install Kibana'

    if [ $SYS == 'ubuntu' ];then
        sf=/etc/apt/sources.list.d/elastic-6.x.list
        if [ ! -f $sf ];then
            wget -qO - https://artifacts.elastic.co/GPG-KEY-elasticsearch | sudo apt-key add -
            sudo apt-get install apt-transport-https
            echo "deb https://artifacts.elastic.co/packages/6.x/apt stable main" | sudo tee -a /etc/apt/sources.list.d/elastic-6.x.list
        fi
        sudo apt update && sudo apt install kibana
    elif [ $SYS == 'centos' ];then
        sudo rpm -ivh https://artifacts.elastic.co/downloads/kibana/kibana-${VERSION}-x86_64.rpm

    fi

    sudo systemctl daemon-reload
    sudo systemctl enable kibana
    sudo systemctl start kibana
}

install
