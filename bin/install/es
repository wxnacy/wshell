#!/usr/local/env bash

OS=${0/%install\/es/system\/check}
OSS=""
if [ -f $OS ];then
    TMP=`${OS}`
    OSS=($TMP)
else
    OS=`curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/system/check_system.sh | bash`
    OSS=(${OS})
fi
SYS=${OSS[0]}
VER=${OSS[1]}

if [ ! `command -v java` ];then
    `${0/%install\/es/java\/install}`
fi


if [ $SYS == 'ubuntu' ];then
    sudo apt update -y
    sudo apt install default-jdk -y
elif [ $SYS == 'centos' ];then
    sudo rpm --install https://artifacts.elastic.co/downloads/elasticsearch/elasticsearch-6.2.4.rpm
    sudo systemctl daemon-reload
    sudo systemctl enable elasticsearch.service
    sudo systemctl start elasticsearch.service
fi
