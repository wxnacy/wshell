#!/usr/bin/env bash

OS=`curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/base/os | bash`
OSS=(${OS})
SYS=${OSS[0]}
VER=${OSS[1]}

if [ ${SYS} == 'ubuntu' ]
then

    sudo apt -y install dnsutils

elif [ ${SYS} == 'centos' ]
then

    sudo yum -y install bind-utils

elif [ ${SYS} == 'Darwin' ]
then

    brew install dig

fi
