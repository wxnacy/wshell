#!/usr/bin/env bash

VERSION=6.3.0

OS=`curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/base/os | bash`
OSS=(${OS})
SYS=${OSS[0]}
VER=${OSS[1]}

echo "Your system is `${OS}`"
curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/install/es | bash

if [ $SYS == 'ubuntu' ];then
    echo 'ubuntu not install'
    sudo apt install -y kibana filebeat
elif [ $SYS == 'centos' ];then
    sudo yum install -y kibana filebeat
fi

sudo systemctl daemon-reload
sudo systemctl enable kibana filebeat
sudo systemctl start kibana filebeat
