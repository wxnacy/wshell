#!/usr/bin/env bash

OS=`curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/base/os | bash`
OSS=(${OS})
SYS=${OSS[0]}
VER=${OSS[1]}

if [ ${SYS} == 'ubuntu' ]
then

    sudo apt update -y
    sudo apt -y install htop

elif [ ${SYS} == 'centos' ]
then

    sudo yum -y install epel-release
    sudo yum -y install htop

elif [ ${SYS} == 'Darwin' ]
then

    brew install htop

fi
