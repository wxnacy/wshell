#!/usr/bin/env bash

VERSION=6.3.0

OS=`curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/base/os | bash`
OSS=(${OS})
SYS=${OSS[0]}
VER=${OSS[1]}

if [ ! `command -v java` ];then
    echo 'Now install java'
    curl -L https://raw.githubusercontent.com/wxnacy/wshell/master/bin/java/install | bash
fi


if [ $SYS == 'ubuntu' ];then
    echo 'ubuntu not install'
elif [ $SYS == 'centos' ];then
    sudo rpm -ivh https://artifacts.elastic.co/downloads/beats/filebeat/filebeat-${VERSION}-x86_64.rpm
fi

sudo systemctl daemon-reload
sudo systemctl enable filebeat
sudo systemctl start filebeat
